@model Order
<h2>Check out now</h2>
<p>Please enter your details, and we'll ship your goods right away!</p>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Checkout" method="post" class="form">
	<h3>Ship to</h3>
	<div class="mb-3">
		<label for="Name" class="form-label">Name:</label>
		<input asp-for="Name" class="form-control">
	</div>
	<h3>Address</h3>
	<div class="mb-3">
		<label for="Line1" class="form-label">Line1:</label>
		<input asp-for="Line1" class="form-control">
	</div>
	<div class="mb-3">
		<label for="Line2" class="form-label">Line2:</label>
		<input asp-for="Line2" class="form-control">
	</div>
	<div class="mb-3">
		<label for="Line3" class="form-label">Line3:</label>
		<input asp-for="Line3" class="form-control">
	</div>
	<div class="mb-3">
		<label for="City" class="form-label">City:</label>
		<input asp-for="City" class="form-control">
	</div>
	<div class="mb-3">
		<label for="State" class="form-label">State:</label>
		<input asp-for="State" class="form-control">
	</div>
	<div class="mb-3">
		<label for="Zip" class="form-label">Zip:</label>
		<input asp-for="Zip" class="form-control">
	</div>
	<div class="mb-3">
		<label for="Country" class="form-label">Country:</label>
		<input asp-for="Country" class="form-control">
	</div>
	<h3>Options</h3>
	<div class="form-check mb-3">
		<input class="form-check-input" asp-for="GiftWrap">
		<label class="form-check-label" for="GiftWrap">
			Gift wrap these items
		</label>
	</div>
	<div class="text-center">
		<input class="btn btn-primary" type="submit" value="Complete Order">
	</div>
</form>