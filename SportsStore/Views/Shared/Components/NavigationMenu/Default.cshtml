@model IEnumerable<string>
<a class="btn d-block btn-outline-secondary mb-1"
   asp-action="Index"
   asp-controller="Home"
   asp-route-category="">
	Home
</a>
@foreach (var category in Model)
{
	<a class="btn d-block mb-1 @(category == ViewBag.SelectedCategory ? "btn-primary": "btn-outline-secondary")"
        asp-action="Index"
	    asp-controller="Home"
		asp-route-category="@category"
		asp-route-productPage="1">
		@category
	</a>
}